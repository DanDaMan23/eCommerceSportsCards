<h1>Updated Cards</h1>
<div class="row">
    <div class="col-4 bg-light text-white">
        <%= form_tag(updated_cards_path, method: :get, class: "mb-3") do %>
            <h5 class="text-dark">Search</h5>
            <%= text_field_tag(:search, params[:search] ) %>
            <%= submit_tag("Submit") %>
        <% end %>
    </div>

    <div class="col-8">
        <%= render partial: 'cards', locals: {cards: @cards} %>
    </div>


</div>